# Scan2Target Docker Environment Configuration
# Copy this file to .env and update with your settings

# Security Settings (REQUIRED in production!)
# Generate with: openssl rand -base64 32
SCAN2TARGET_SECRET_KEY=changeme-generate-a-secure-key

# Force authentication (recommended)
SCAN2TARGET_REQUIRE_AUTH=true

# Optional: SMTP Configuration for email targets
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Application Settings
# SCAN2TARGET_DATA_DIR=/data
# SCAN2TARGET_DB_PATH=/data/db/scan2target.db

# Scanner reachability check interval (in seconds, default: 30)
# How often the system checks if already added scanners are still online
# SCAN2TARGET_SCANNER_CHECK_INTERVAL=30
